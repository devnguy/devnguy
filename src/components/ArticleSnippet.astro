---
import { processArticleDate } from "../lib/utils";
import Anchor from "./common/Anchor.astro";

export type Props = {
  title: string;
  description: string;
  url: string;
  timestamp?: Date;
};

const { title, description, url, timestamp } = Astro.props;
---

<div
  class="relative zag-text zag-transition flex flex-col gap-3 mb-8 hover-zag-dotted-grid"
>
  <Anchor url={url} class="text-xl">
    {title}
  </Anchor>
  <p class="">
    {description}
  </p>
  <div class="zag-muted zag-transition flex justify-between items-center">
    {timestamp ? <p>{processArticleDate(timestamp)}</p> : null}
  </div>
</div>
